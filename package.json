{
  "name": "webidl2ts",
  "version": "2.0.0",
  "description": "Converts Web IDL to Typescript (.d.ts)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && chmod 755 dist/cli.js",
    "lint": "tsc --noEmit",
    "start": "yarn build && ./dist/cli.js",
    "format": "yarn prettier --write .",
    "test": "node --test --require ts-node/register ./test/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giniedp/webidl2ts.git"
  },
  "homepage": "https://github.com/giniedp/webidl2ts",
  "author": "Alexander Gr√§fenstein",
  "license": "MIT",
  "files": [
    "dist",
    "Readme.md",
    "package.json",
    "LICENSE.md"
  ],
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/webidl2": "^23.13.5",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "prettier": "^2.1.2",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "jsdom": "^16.4.0",
    "typescript": "^4.9.3",
    "webidl2": "^23.13.0",
    "yargs": "^16.1.0"
  },
  "bin": {
    "webidl2ts": "./dist/cli.js"
  }
}
